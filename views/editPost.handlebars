<div class="col-md-6">
    <h3>Edit: {{name}}</h3>

    <form class="form update-project-form">
        <div class="form-group">
            <label for="project-name">blog post title:</label>
            <input class="form-input" type="text" id="project-name" name="project-name" value="{{name}}" />
        </div>
        <div class="form-group">
            <label for="project-desc">content:</label>
            <textarea class="form-input" id="project-desc" name="project-desc">{{post}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary submit-update-btn">Update</button>
        </div>
    </form>
</div>

<script src="/js/blogPost.js"></script>